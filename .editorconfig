root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Matches multiple files with these extensions
[*.{md,yml,yaml,json,toml,js,css,svg,sh,bash,fish}]
indent_style = space
indent_size = 2

[{go.mod,go.sum,*.go}]
indent_style = tab
indent_size = 4

[Dockerfile]
indent_style = tab
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

[*.java]
indent_style = space
indent_size = 4

# for IntelliJ IDEA setting
[*]
ij_visual_guides = none
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = true

# Tab length
[*]
tab_width = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2
